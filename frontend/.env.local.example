# API and Socket configuration
# Base URL for API requests (include /api suffix)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Base URL for SignalR socket connection (without /api)
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# Optional: Enable or disable browser notifications (true/false)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Optional: Maximum number of messages to display at once
# Default: 50 messages
NEXT_PUBLIC_MAX_MESSAGES=50

# Optional: Typing indicator timeout in milliseconds
# Default: 3000 (3 seconds)
NEXT_PUBLIC_TYPING_TIMEOUT=3000

# Optional: Reconnection delay in milliseconds
# Default: 2000 (2 seconds)
NEXT_PUBLIC_RECONNECT_DELAY=2000
